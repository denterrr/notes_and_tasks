<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    TEXT START-->

    <style name="Text">
        <item name="fontFamily">@font/manrope_medium</item>
        <item name="android:textColor">?attr/appSecondaryColor</item>
    </style>

    <style name="Text.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/manrope_regular</item>
    </style>

    <style name="Text.Title1">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Title2">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Title3">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Body">
        <item name="android:fontFamily">@font/manrope_regular</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!--    TEXT END-->

    <!--    BOTTOM NAVIGATION START-->

    <style name="Divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:alpha">0.4</item>
        <item name="android:background">?attr/appSecondaryColor</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:layout_height">80dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
        <item name="itemTextAppearanceActive">@style/Text.Caption</item>
        <item name="itemTextAppearanceInactive">@style/Text.Caption</item>
        <item name="backgroundTint">?attr/appBackgroundColor</item>
        <item name="itemActiveIndicatorStyle">@style/App.Custom.Indicator</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/blue</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorOnSecondaryContainer">@color/white</item>
    </style>

    <!--    BOTTOM NAVIGATION END-->

    <!--    APP BAR START-->

    <style name="Widget.App.CollapsingToolbar.Large" parent="Widget.Material3.CollapsingToolbar.Large">

        <item name="expandedTitleTextAppearance">@style/Text.Title1</item>
        <item name="collapsedTitleTextAppearance">@style/Text.Title2</item>
        <item name="titleCollapseMode">scale</item>
        <item name="layout_scrollFlags">scroll|snap|exitUntilCollapsed</item>
        <item name="collapsedTitleGravity">center</item>
        <item name="expandedTitleGravity">center</item>
        <item name="contentScrim">?attr/appBackgroundColor</item>
        <item name="android:layout_height">?attr/collapsingToolbarLayoutLargeSize</item>
    </style>


    <!--    APP BAR END-->

    <!--    MATERIAL ALERT DIALOG START-->

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">?attr/appBackgroundColor</item>
        <item name="colorSecondary">?attr/appBackgroundColor</item>
        <item name="colorSurface">?attr/appBackgroundColor</item>
        <item name="colorOnSurface">?attr/appBackgroundColor</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text
        </item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.App.Body.Text
        </item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="fontFamily">@font/manrope_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/appSecondaryColor</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="fontFamily">@font/manrope_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/appSecondaryColor</item>
    </style>

    <style name="MaterialAlertDialog.App.Body.Text" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="fontFamily">@font/manrope_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/appSecondaryColor</item>
    </style>


    <!--    MATERIAL ALERT DIALOG END-->
</resources>