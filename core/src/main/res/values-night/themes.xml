<resources>
    <!-- Base application theme. -->
    <style name="Theme.NotesAndTasks" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/darkPrimary</item>
        <item name="android:navigationBarColor">@color/darkPrimary</item>

        <item name="appPrimaryColor">@color/darkPrimary</item>
        <item name="appSecondaryColor">@color/white</item>
        <item name="appBackgroundColor">@color/darkPrimary</item>
        <item name="appSecondaryBackgroundColor">@color/darkSecondary</item>


        <!--        REMOVING UNDERLINE IN TEXT INPUT EDIT TEXT-->
        <item name="android:candidatesTextStyleSpans">candidates</item>
    </style>

    <style name="SplashTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_layer</item>
        <item name="appPrimaryColor">@color/darkPrimary</item>
    </style>
</resources>